#Checks: 'cppcoreguidelines-*,modernize-*,'
Checks: "modernize-*,-modernize-use-trailing-return-type,-modernize-use-nodiscard,readability-identifier-naming,"
CheckOptions:
  #  - { key: readability-identifier-naming.NamespaceCase,          value: CamelCase    }
  - { key: readability-identifier-naming.ClassCase, value: CamelCase }
  - { key: readability-identifier-naming.MemberCase, value: lower_case }
  - { key: readability-identifier-naming.MemberSuffix, value: "_" }
  - { key: readability-identifier-naming.StructCase, value: CamelCase }
  - { key: readability-identifier-naming.FunctionCase, value: CamelCase }
  - { key: readability-identifier-naming.MethodCase, value: CamelCase }
  - {
      key: readability-identifier-naming.MethodIgnoredRegexp,
      value: "^await_ready$|^await_resume$|^return_void$|^return_value$|^get_return_object$|^initial_suspend$|^final_suspend$|^unhandled_exception$|^await_suspend$|^await_transform$",
    }
  - { key: readability-identifier-naming.ConstantCase, value: UPPER_CASE }
  - { key: readability-identifier-naming.LocalConstantCase, value: aNy_CasE }
  - { key: readability-identifier-naming.StaticVariablePrefix, value: "s__" }
  - { key: readability-identifier-naming.StaticVariableCase, value: lower_case }
  - { key: readability-identifier-naming.StaticConstantPrefix, value: "" }
  - { key: readability-identifier-naming.StaticConstantCase, value: UPPER_CASE }
  - { key: readability-identifier-naming.VariableCase, value: lower_case }
  - {
      key: readability-identifier-naming.TemplateParameterCase,
      value: UPPER_CASE,
    }
  #  - { key: readability-identifier-naming.TemplateParameterSuffix,  value: '_'        }
  - {
      key: readability-identifier-naming.MacroDefinitionCase,
      value: UPPER_CASE,
    }
